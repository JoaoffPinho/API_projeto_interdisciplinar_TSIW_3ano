    "components": {
        "schemas":{
            "Badge": {
                "type": "object",
                "required": ["name", "image", "reqPoints","requisits" ,"rewardPoints"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "image": {
                        "type": "link"
                    },
                    "reqPoints": {
                        "type": "integer"
                    },
                    "requisits": {
                        "type": "string"
                    },
                    "rewardPoints": {
                        "type": "integer"
                    }
                }
            },
            "Client": {
                "type": "object",
                "required": ["name", "contact"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "contact": {
                        "type": "integer"
                    },
                    "desc": {
                        "type": "string"
                    }
                }
            },
            "Project": {
                "type": "object",
                "required": ["client", "name","manager","workers"],
                "properties": {
                    "client": {
                        "type": "string"
                    }, 
                    "name": {
                        "type": "string"
                    }, 
                    "manager": {
                        "type": "string"
                    }, 
                    "workers": {
                        "type":"object",
                        "properties":{ 
                            "id": {
                                "type": "string"
                            }
                        },
                        "required": ["id"]
                    }
                }
            },
            "Task": {
                "type": "object",
                "required": ["title", "worker_id", "project_id", "timeSpent"],
                "properties": {
                    "title": {
                        "type": "string"
                    }, 
                    "worker_id": {
                        "type": "string"
                    },
                    "project_id": {
                        "type": "string"
                    },
                    "desc": {
                        "type":"string"
                    }, 
                    "timeSpent": {
                        "type": "integer"
                    }
                }
            },
            "Team": {
                "type": "object",
                "required": ["title", "manager_id"],
                "properties": {
                    "title": {
                        "type": "string"
                    }, 
                    "manager_id": {
                        "type": "string"
                    },
                    "desc": {
                        "type": "string"
                    },
                    "workers": {
                        "type":"object",
                        "properties":{ 
                            "id": {
                                "type": "string"
                            }
                        },
                        "required": ["id"]
                    }
                }
            },
            "Worker": {
                "type": "object",
                "required": ["name", "password"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "admin": {
                        "type": "boolean"
                    },
                    "password": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }, 
                    "badges": {
                        "type": "object",
                        "required": ["id"],
                        "properties": {
                            "id": {
                                "type": "string"
                            }
                        }
                    }, 
                    "tasksDone": {
                        "type": "integer"
                    }, 
                    "hoursWorked": {
                        "type": "integer"
                    }, 
                    "projectsInvolved": {
                        "type": "integer"
                    }, 
                    "HoursForTheDay": {
                        "type": "integer"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
