{
    "openapi": "3.0.1",
    "info": {
        "title": "DTAM and TSIW API",
        "description": "DTAM and TSIW API Demo",
        "version": "1.0"
    },
    "produces": ["application/json"],
    "schemes": ["http"],
    "components": {
        "schemas":{
            "Badge": {
                "type": "object",
                "required": ["name", "image", "reqAchivement", "rewardPoints"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "image": {
                        "type": "link"
                    }, 
                    "reqAchivement": {
                        "type": "string"
                    }, 
                    "rewardPoints": {
                        "type": "integer"
                    }
                }
            },
            "Client": {
                "type": "object",
                "required": ["name", "contact"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "contact": {
                        "type": "string"
                    }
                }
            },
            "Project": {
                "type": "object",
                "required": ["client", "name","manager","workers","tasks"],
                "properties": {
                    "client": {
                        "type": "string"
                    }, 
                    "name": {
                        "type": "string"
                    }, 
                    "manager": {
                        "type": "string"
                    }, 
                    "workers": {
                        "type": "array",
                        "item":{
                            "type":"string"
                        }
                    }, 
                    "tasks": {
                        "type": "array"
                    }
                }
            },
            "Team": {
                "type": "object",
                "required": ["workers", "desc"],
                "properties": {
                    "workers": {
                        "type": "array"
                    }, 
                    "desc": {
                        "type": "string"
                    }
                }
            },
            "Worker": {
                "type": "object",
                "required": ["name", "admin","password","email","badges","tasksDone","hoursWorked","projectsInvolved","HoursForTheDay"],
                "properties": {
                    "name": {
                        "type": "string"
                    }, 
                    "admin": {
                        "type": "boolean"
                    }, 
                    "password": {
                        "type": "string"
                    }, 
                    "email": {
                        "type": "string"
                    }, 
                    "badges": {
                        "type": "array"
                    }, 
                    "tasksDone": {
                        "type": "integer"
                    }, 
                    "hoursWorked": {
                        "type": "integer"
                    }, 
                    "projectsInvolved": {
                        "type": "integer"
                    }, 
                    "HoursForTheDay": {
                        "type": "integer"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }, 
    "paths": {
        "/workers/login": {
            "post": {
                "description": "Login",
                "tags": ["workers"],
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "$ref": "#components/schemas/Worker"
                            },
                            "examples": {
                                "Worker": {
                                    "value": {
                                        "name":"admin", 
                                        "password": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Sucess": {
                                        "value": "Bearer Token"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Error"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/workers/register": {
            "post": {
                "description": "Register",
                "tags": ["workers"],
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "$ref": "#components/schemas/Worker"
                            },
                            "examples": {
                                "Worker": {
                                    "value": {
                                        "name":"admin", 
                                        "password": "1234",
                                        "email": "admin@gmail.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "examples": {
                                "Success": {
                                    "value": "Worker Created"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Error"
                                    }
                                }
                            }
                        }
                    },
                    "406": {
                        "description": "Duplicated",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Duplicated User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}